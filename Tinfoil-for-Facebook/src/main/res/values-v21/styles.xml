<resources>

    <!--
        Base application theme for API 21+ to use the Material Theme
    -->
    <style name="AppBaseTheme" parent="android:Theme.Material.Light.NoActionBar">
        <!-- API 21 theme customizations can go here. -->

        <item name="android:colorPrimary">@color/blue_primary</item>
        <item name="android:colorPrimaryDark">@color/blue_primary_dark</item>
        <item name="android:colorAccent">@color/blue_accent</item>
    </style>

    <!-- Base Preferences theme -->
    <style name="AppBasePreferencesTheme" parent="android:Theme.Material.Light.DarkActionBar">
        <item name="android:colorPrimary">@color/blue_primary</item>
        <item name="android:colorPrimaryDark">@color/blue_primary_dark</item>
        <item name="android:colorAccent">@color/blue_accent</item>
    </style>

    <!-- Custom style used for the top ProgressBar -->
    <style name="Widget.Tinfoil.ProgressBar" parent="android:Widget.Material.ProgressBar.Horizontal">
    </style>

</resources>
